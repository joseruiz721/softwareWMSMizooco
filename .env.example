# ============================================
# CONFIGURACIÓN PARA RAILWAY
# ============================================

# ✅ IMPORTANTE: En Railway, copiar la DATABASE_URL completa desde:
# Dashboard > Variables > DATABASE_URL (generada automáticamente)
DATABASE_URL=postgresql://user:password@host:port/database

# O usar variables individuales (alternativa):
DB_USER=postgres
DB_PASSWORD=tu_contraseña_segura
DB_HOST=localhost
DB_PORT=5432
DB_NAME=control_acceso

# ============================================
# VARIABLES DE APLICACIÓN
# ============================================

# Node environment
NODE_ENV=production

# Puerto (Railway lo asigna automáticamente)
PORT=3000

# URL del frontend
FRONTEND_URL=https://tu-dominio.railway.app

# Session Secret (cambiar a una cadena aleatoria segura)
SESSION_SECRET=tu_session_secret_muy_seguro_y_aleatorio

# ============================================
# CONFIGURACIÓN DE EMAIL (Nodemailer)
# ============================================

EMAIL_USER=tu_correo@gmail.com
EMAIL_PASSWORD=tu_app_password_gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ============================================
# JWT Secret
# ============================================

