{
  "name": "control_acceso",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:schema": "node scripts/run_schema.js",
    "db:migrate:usuarios": "node scripts/migrate-usuarios-estado.js",
    "db:migrate:all": "npm run db:migrate:usuarios",
    "db:verify": "node scripts/verify-migration.js",
    "db:reset": "node scripts/reset-migration.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "mobile:icons": "node scripts/generate-icons.js",
    "mobile:test": "node scripts/test-mobile.js",
    "mobile:audit": "lighthouse http://localhost:3000 --view",
    "build:pwa": "node scripts/build-pwa.js",
    "deploy:mobile": "npm run mobile:icons && npm run build:pwa"
  },
  "keywords": [
    "wms",
    "mobile",
    "responsive",
    "pwa",
    "tablet"
  ],
  "author": "",
  "license": "ISC",
  "description": "Sistema de gestión WMS con soporte para dispositivos móviles y tabletas",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "express-useragent": "^1.0.15",
    "jsonwebtoken": "^9.0.2",
    "lighthouse": "^11.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.12.0",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "nodemon": "^3.0.3",
    "puppeteer": "^21.11.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ios_saf >= 10",
    "chrome >= 60",
    "firefox >= 60",
    "safari >= 10",
    "edge >= 15",
    "android >= 6"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "pwa": {
    "name": "Gestión WMS",
    "short_name": "WMS Mobile",
    "description": "Sistema de gestión de almacenes móvil",
    "start_url": "/",
    "display": "standalone",
    "orientation": "portrait-primary"
  }
